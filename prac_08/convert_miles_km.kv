BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: ''
            font_size: 48
            multiline: False
            size_hint_x: 0.8
        BoxLayout:
            orientation: 'vertical'
            Button:
                id: up_button
                text: 'Up'
                # the following line specifies the function in the app class to call when the button is pressed
                on_press: app.handle_calculate(input_number.text)
                BoxLayout:
            Button:
                id: down_button
                text: 'Down'
                # the following line specifies the function in the app class to call when the button is pressed
                on_press: app.handle_calculate(input_number.text)
    Button:
        id: conversion_button
        font_size: 24
        text: 'Convert miles to km'
    Label:
        id: output_label
        _label
        font_size: 24
        text: 'Convert miles to km'